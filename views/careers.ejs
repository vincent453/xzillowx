        text-align: center;
        padding: 3rem 1rem;
        background-color: #f1f2f3;
      }

      .section-title {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        color: #333;
      }

      .video-container {
        max-width: 800px;
        margin: 2rem auto;
        height: 20rem;
        position: relative;
        overflow: hidden;
      }

      .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
      }

      .video-description {
        max-width: 800px;
        margin: 0 auto;
        font-size: 0.9rem;
        color: #555;
        padding: 1rem;
      }

      .image-gallery {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 2rem;
      }

      .image-gallery img {
        width: 70%;
      }

      .gallery-image {
        width: 70px;
        height: 50px;
        object-fit: cover;
        border-radius: 4px;
        cursor: pointer;
      }

      /* Recognition Section */
      .recognition {
        text-align: center;
        padding: 3rem 1rem;
        background-color: white;
      }

      /* Carousel Navigation */
      .carousel-nav {
        position: absolute;
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        left: 0;
        right: 0;
        bottom: 2rem;
      }

      .nav-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: #ccc;
        cursor: pointer;
      }

      .nav-dot.active {
        background-color: #1a73e8;
      }

      .carousel-arrows {
        position: absolute;
        top: 50%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        transform: translateY(-50%);
        padding: 0 1rem;
      }

      .arrow {
        width: 40px;
        height: 40px;
        background-color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      /* Social Media Section Styling */
      .social-banner {
        width: 100%;
        height: 300px;
        background-image: linear-gradient(
            rgba(0, 0, 0, 0.75),
            rgba(0, 0, 0, 0.75)
