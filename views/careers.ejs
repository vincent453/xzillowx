        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        position: relative;
        background-color: red;
      }

      .social-handle {
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
      }

      .instagram-button {
        background: transparent;
        color: white;
        border: 2px solid white;
        padding: 10px 25px;
        border-radius: 30px;
        font-size: 16px;
        cursor: pointer;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
      }

      .instagram-button:hover {
        background-color: white;
        color: #0a3d62;
      }

      /* Safety Advisory Section Styling */
      .safety-section {
        max-width: 1000px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 5px;
      }

      .safety-header {
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.5rem;
        color: #333;
      }

      .safety-content {
        line-height: 1.6;
        color: #555;
      }

      .safety-content p {
        margin-bottom: 15px;
      }

      .email-link {
        color: #0066cc;
        text-decoration: none;
      }

      .email-link:hover {
        text-decoration: underline;
      }

      /* Footer with timestamp */
      .footer {
        position: fixed;
        bottom: 0;
        right: 0;
        background-color: #e9ecef;
        padding: 5px 10px;
        border-top-left-radius: 5px;
        font-size: 12px;
        color: #444;
      }
      .join {
        color: #8ed1fc;
        font-family: "Lato", serif;
      }
      @media (max-width: 900px) {
        .benefits-container {
          flex-direction: column;
        }

        .benefits-image,
        .benefits-content {
          max-width: 100%;
        }

        .banner-title {
          font-size: 2rem;
        }

        .banner-content {
          padding-left: 5%;
          padding-right: 5%;
        }

        .content-section {
          flex-direction: column;
          align-items: center;
        }

        .content-block {
          max-width: 100%;
        }

        .blue-banner-buttons {
          flex-direction: column;
          align-items: center;
        }
      }
    </style>
