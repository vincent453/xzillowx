/* General Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Inter', Arial, sans-serif;
}

body {
    font-family: 'Inter', Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f9f9f9;
    color: #333;
}

.all {
    margin-top: 6rem;
}

/* Header and Navigation */
nav {
    background-color: #003580;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.logo-con {
    display: flex;
    align-items: center;
}

.logo {
    height: 40px;
    margin-right: 10px;
}

.xzillow-logo {
    color: white;
    font-family: 'Montserrat', sans-serif;
}

.first-ul, .second-ul {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.first-ul a, .second-ul a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.3s;
}

.first-ul a:hover, .second-ul a:hover {
    opacity: 0.8;
}

.mobile-nav {
    display: none;
    width: 100%;
    justify-content: space-between;
    align-items: center;
}

.bars {
    cursor: pointer;
}

/* Mobile Menu */
.overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 999;
    display: none;
}

.overlay.active {
    display: block;
}

.mobile-menu {
    position: fixed;
    top: 0;
    left: -80%;
    width: 80%;
    height: 100%;
    background: white;
    z-index: 1000;
    transition: left 0.3s ease;
    overflow-y: auto;
    box-shadow: 2px 0 10px rgba(0,0,0,0.1);
}

.mobile-menu.active {
    left: 0;
}

.mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid #eee;
}

.close-menu {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
}

.mobile-menu-items ul {
    list-style: none;
}

.mobile-menu-items ul li {
    border-bottom: 1px solid #eee;
}

.mobile-menu-items ul li a {
    display: block;
    padding: 15px 20px;
    color: #333;
    text-decoration: none;
}

/* Main Container Styles */
.container1, .container2, .container3, .container4, .container5 {
    max-width: 1200px;
    margin: 40px auto;
    padding: 20px;
}

/* Section Headers */
.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.header h1 {
    font-size: 24px;
    color: #1a1a1a;
    font-weight: bold;
}

.see-all {
    color: #0066cc;
    text-decoration: none;
    font-weight: 500;
}

/* Slider Styles */
.slider-container {
    position: relative;
    overflow: hidden;
    height: 68vh;
}

.slider {
    display: flex;
    transition: transform 0.5s ease-in-out;
}

.slide {
    min-width: 100%;
    display: flex;
    gap: 40px;
    padding: 20px;
}

.slide-image {
    flex: 1;
    max-width: 60%;
}

.slide-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 8px;
}

.slide-content {
    flex: 1;
    max-width: 40%;
    padding: 20px;
}

.category {
    color: #6200ee;
    font-weight: 600;
    margin-bottom: 10px;
    display: inline-block;
}

.read-time {
    color: #666;
    font-size: 14px;
    margin-left: 10px;
    line-height: 2;
    display: block;
}

.slide-title {
    font-size: 32px;
    color: #333;
    margin: 20px 0;
    line-height: 1.2;
}

.slide-description {
    color: #666;
    line-height: 1.6;
    margin-bottom: 20px;
}

.read-article {
    display: inline-block;
    padding: 12px 24px;
    background: #0066ff;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
}

.slider-buttons {
    position: absolute;
    bottom: 20px;
    right: 20px;
    display: flex;
    gap: 10px;
}

.slider-button {
    width: 40px;
    height: 40px;
    border: 1px solid #ddd;
    background: white;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
}

.slider-button:hover {
    background: #f5f5f5;
}

.slider-button svg {
    width: 20px;
    height: 20px;
}

/* Grid Layout for Cards */
.grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    padding: 10px;
}

.card {
    display: flex;
    border-radius: 15px;
    overflow: hidden;
    background: white;
    height: 160px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.card-image {
    width: 40%;
    height: 100%;
    object-fit: cover;
}

.card-content {
    width: 100%;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.card-title {
    font-size: 18px;
    color: #00295c;
    padding: 8px;
    border-radius: 4px;
}

.bottom-border {
    height: 20px;
    margin-top: 20px;
}

/* Articles Grid */
.articles-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}

.main-article {
    grid-column: 1;
    grid-row: 1 / span 3;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    height: 70%;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.main-article img {
    width: 100%;
    height: 300px;
    object-fit: cover;
}

.content {
    padding: 20px;
}

.article-title {
    font-size: 20px;
    color: #1a1a1a;
    margin-bottom: 10px;
    text-decoration: none;
    line-height: 1.4;
    display: block;
}

.main-article .article-title {
    font-size: 24px;
}

.description {
    color: #666;
    font-size: 16px;
    line-height: 1.5;
}

/* Article Cards */
.article-card {
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.article-card img {
    width: 100%;
    height: 140px;
    object-fit: cover;
}

/* Scrollable Articles Row */
.scroll-container {
    position: relative;
    margin: 0 -20px;
    padding: 0 20px;
}

.articles-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    width: 100%;
    justify-content: center;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding: 20px 0;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
}

.articles-row::-webkit-scrollbar {
    display: none; /* Chrome, Safari and Opera */
}

.nav-buttons {
    position: absolute;
    right: 20px;
    top: -24px;
    display: flex;
    gap: 8px;
}

.nav-button {
    width: 36px;
    height: 36px;
    border: 1px solid #ddd;
    background: white;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
}

.nav-button:hover {
    background: #f5f5f5;
}

.nav-button svg {
    width: 20px;
    height: 20px;
    fill: none;
    stroke: currentColor;
}

/* Download App Section */
.download-section {
    background-color: #e0f2ff;
    border-radius: 16px;
    padding: 40px;
    display: flex;
    justify-content: space-between;
    align-items: top;
    
    gap: 40px;
}
.content{
    display: flex;
    flex-direction: column;
    height: 50%;
}
.download-section .content{
    direction: flex;
    flex-direction: column;
    width: 100%;
}

.title {
    font-size: 32px;
    color: #0066ff;
    margin-bottom: 16px;
    font-weight: bold;
}

.download-button {
    display: inline-block;
    background-color: #0066ff;
    color: white;
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    font-size: 16px;
    text-align: center;
    transition: background-color 0.3s;
}

.download-button:hover {
    background-color: #0052cc;
}

.image-container {
    flex: 1;
    max-width: 500px;
}

.image-container img {
    width: 100%;
    height: 330px;
    object-fit: cover;
    border-radius: 12px;
}


/* Media Queries */
@media (max-width: 1024px) {
    .container1, .container2, .container3, .container4, .container5 {
        padding: 20px;
    }
}

@media (max-width: 900px) {
    .first-ul, .second-ul {
        gap: 1rem;
    }
    
    .slide {
        flex-direction: column;
    }
    
    .slide-image, .slide-content {
        max-width: 100%;
    }
    
    .slide-image img {
        height: 300px;
    }
    
    .slider-container {
        height: auto;
        min-height: 600px;
    }
}

@media (max-width: 768px) {
    .articles-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    }
    .mobile-nav {
        display: flex;
    }
    
    .desk, .first-ul, .second-ul {
        display: none;
    }
    
    .grid {
        grid-template-columns: 1fr;
    }
    
    .card {
        height: auto;
    }
    
    .card-image {
        width: 40%;
        height: 120px;
    }
    
    .articles-grid {
        grid-template-columns: 1fr;
    }
    
    .main-article {
        grid-column: auto;
        grid-row: auto;
    }
    
    .download-section {
        flex-direction: column;
        padding: 24px;
    }
    
    .down.content {
        text-align: center;
        max-width: 100%;
    }
    
    .image-container {
        order: -1;
        max-width: 100%;
    }
    
    .image-container img {
        height: 300px;
    }
    
    .title {
        font-size: 28px;
    }
    
    .description {
        font-size: 16px;
    }
    
    .nav-buttons {
        display: none;
    }
    
    .links-row {
        justify-content: center;
    }
    
    .bottom-row {
        flex-direction: column;
        gap: 15px;
        align-items: center;
        text-align: center;
    }
}

@media (max-width: 576px) {
    .articles-row {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    }
    .card {
        flex-direction: column;
        height: auto;
    }
    
    .card-image {
        width: 100%;
        height: 180px;
    }
    
    .card-content {
        width: 100%;
    }
    
    .article-card {
        display: flex;
    }
    
    .article-card img {
        width: 100%;
        height: 180px;
    }
    .main-article{
        height: 100%;
    }
    .main-article img {
        height: 220px;
    }
    
    .download-section {
        padding: 20px;
    }
    
    .title {
        font-size: 24px;
    }
    
    .image-container img {
        height: 250px;
    }
    
    .links-row {
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }
}

  </style>
