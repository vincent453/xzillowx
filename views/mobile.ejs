      align-items: center;
      font-size: 14px;
    }
    
    .rating-stars {
      color: #ffb400;
      margin: 0 0.5rem;
    }
    
    .value-props {
      max-width: 1100px;
      margin: 4rem auto;
      display: flex;
      justify-content: space-between;
      padding: 5rem 0rem;
    }
    
    .value-prop {
      display: flex;
      flex-direction: column;
      align-items: center;
      max-width: 380px;
      text-align: center;
      row-gap: 2.5rem;


    }
    
    .value-prop-icon {
