        document.querySelectorAll('.' + groupClass).forEach(tab => tab.classList.remove('active'));

        // Show the selected tab
        document.getElementById(tabId).classList.add('active');

        // Remove active class from all tabs in the group
        clickedTab.parentElement.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));

        // Set clicked tab as active
        clickedTab.classList.add('active');
    }
    </script>
